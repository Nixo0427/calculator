<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.nixo.bilibiliproject.MainActivity">

    <include layout="@layout/show"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <Button
            android:text="AC"
            android:id="@+id/ac"
            android:background="#8000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:text="/"
            android:id="@+id/chu"
            android:background="#8000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:text="X"
            android:id="@+id/cheng"
            android:background="#8000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:text="del"
            android:id="@+id/del"
            android:background="#8000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <Button
            android:text="7"
            android:id="@+id/num7"
            android:background="#8000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:text="8"
            android:id="@+id/num8"
            android:background="#8000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:text="9"
            android:id="@+id/num9"
            android:background="#8000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:text="+"
            android:id="@+id/jia"
            android:background="#8000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <Button
            android:text="4"
            android:id="@+id/num4"
            android:background="#8000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:text="5"
            android:id="@+id/num5"
            android:background="#8000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:text="6"
            android:id="@+id/num6"
            android:background="#8000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:text="-"
            android:id="@+id/jian"
            android:background="#8000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="1"
                    android:id="@+id/num1"
                    android:background="#8000"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" />

                <Button
                    android:text="2"
                    android:id="@+id/num2"
                    android:background="#8000"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" />
                <Button
                    android:text="3"
                    android:id="@+id/num3"
                    android:background="#8000"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <Button
                    android:text="0"
                    android:id="@+id/num0"
                    android:background="#8000"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="80dp" />

                <Button
                    android:text="."
                    android:id="@+id/dian"
                    android:background="#8000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp" />

            </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <Button

                android:text="="
                android:id="@+id/deng"
                android:background="#8000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>






    </LinearLayout>


</LinearLayout>
